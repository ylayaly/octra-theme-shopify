
<div class="tec-container-1">
  <div class="tec-wrap-1">
    <div class="tec-wrap-2">
      <div class="tec-wrap-4">
        <div class="tec-text-1">{{ section.settings.tag | escape }}</div>
        <img src="{{ 'otw-icon-stars.svg' | asset_url }}" loading="lazy" alt="" width="auto" height="auto" class="tec-icons-1">
      </div>
      <div class="tec-wrap-5">
        <{{ section.settings.heading_tag }} class="tec-heading-1">
            {{- section.settings.heading | escape -}}
        </{{ section.settings.heading_tag }}>
        <div class="tec-text-2">
          {{ section.settings.subheading | escape }}
        </div>
      </div>
      <div class="tec-wrap-6">
        <a href="{{ section.settings.link | escape }}" class="tec-button-1 w-button">{{ section.settings.cta_text | escape }}</a>
      </div>
    </div>
    <div class="tec-wrap-3">
        {% render 'otw-image', image: section.settings.image, class: 'tec-image-1' %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Octra | Hero",
  "tag": "section",
  "class": "tec-section-1",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "tag",
      "label": "Top title",
      "default": "Rated Excellent"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "options": [
        {
          "value": "h1",
          "label": "Heading 1"
        },
        {
          "value": "h2",
          "label": "Heading 2"
        },
        {
          "value": "h3",
          "label": "Heading 3"
        }
      ],
      "default": "h2",
      "label": "Heading tag"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Fuel Your Mind. Power Your Body."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Effective daily supplements crafted with proven ingredients. Simple routines, powerful results."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Octra | Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}
