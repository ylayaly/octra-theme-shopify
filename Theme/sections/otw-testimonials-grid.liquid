<div class="nom-container-1">
  <div class="nom-wrap-1">
    <div class="nom-wrap-2">
      <{{ section.settings.heading_tag }} class="nom-heading-1">
        {{- section.settings.heading | escape -}}
      </{{ section.settings.heading_tag }}>
      <div class="nom-text-1">
        {{ section.settings.subheading }}
      </div>
    </div>
    <div class="nom-wrap-3">
      {%- for testimonial in section.settings.testimonials -%}
        <div class="nom-wrap-4">
          <div class="nom-wrap-5">
            {% if testimonial.image %}
              {% render 'otw-image', image: testimonial.image, class: 'nom-image-1' %}
            {% else %}
              <img src="{{ 'otw-testimonial-placeholder.png' | asset_url }}" width="auto" height="auto" alt="Placeholder Image" class="nom-image-1">
            {% endif %}
          </div>
          <div class="nom-wrap-6">
            {%- if testimonial.testimonial != blank -%}
              <div class="nom-text-2">“{{ testimonial.testimonial }}”</div>
            {%- endif -%}
            <img src="{{ 'otw-icon-stars.svg' | asset_url }}" loading="lazy" width="auto" height="auto" alt="" class="nom-icons-1">
            {%- if testimonial.author != blank -%}
              <div class="nom-text-3">
                {{ testimonial.author }}
              </div>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Octra | Testimonials Grid",
  "tag": "section",
  "class": "om-section-1",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "heading_tag",
      "options": [
        {
          "value": "h1",
          "label": "Heading 1"
        },
        {
          "value": "h2",
          "label": "Heading 2"
        },
        {
          "value": "h3",
          "label": "Heading 3"
        }
      ],
      "default": "h2",
      "label": "Heading tag"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Real People, Real Results"
    },
    {
      "type": "inline_richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "OCTRA supplements are designed for real life—simple, effective, and enjoyable. But don’t just take our word for it. Here’s what our community has to say."
    },
    {
      "type": "metaobject_list",
      "id": "testimonials",
      "label": "Testimonials",
      "metaobject_type": "testimonial"
    }
  ],
  "presets": [
    {
      "name": "Octra | Testimonials Grid",
      "category": "Custom",
      "settings": {
        "heading": "Real People, Real Results",
        "subheading": "OCTRA supplements are designed for real life—simple, effective, and enjoyable. But don’t just take our word for it. Here’s what our community has to say.",
      }
    }
  ]
}
{% endschema %}
