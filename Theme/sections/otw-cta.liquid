
  <div class="ace-container-1">
    <div class="ace-wrap-1">
      <div class="ace-wrap-2">
        {% render 'otw-image', image: section.settings.image, class: 'ace-image-2' %}
      </div>
      <div class="ace-wrap-3">
        <{{ section.settings.heading_tag }} class="ace-heading-1">
            {{- section.settings.heading | escape -}}
        </{{ section.settings.heading_tag }}>
        <p class="ace-paragraph-1">
            {{ section.settings.content }}
        </p>
        <a href="{{ section.settings.link | escape }}" class="ace-button-1 w-button">{{ section.settings.cta_text | escape }}</a>
      </div>
    </div>
  </div>


{% schema %}
{
  "name": "Octra | CTA",
  "tag": "section",
  "class": "ace-section-1",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "options": [
        {
          "value": "h1",
          "label": "Heading 1"
        },
        {
          "value": "h2",
          "label": "Heading 2"
        },
        {
          "value": "h3",
          "label": "Heading 3"
        }
      ],
      "default": "h2",
      "label": "Heading tag"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Made for Everyone and Every Lifestyle"
    },
    {
      "type": "inline_richtext",
      "id": "content",
      "label": "Content",
      "default": "From ambitious students to busy professionals, from dedicated gym-goers to those investing in long-term health, Octra is built for every lifestyle. Whether you’re building strength, sharpening focus, or simply supporting daily wellness, our supplements make consistency simple, whatever stage of life you’re in."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "VIEW THE COLLECTION"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Octra | CTA",
      "category": "Custom"
    }
  ]
}
{% endschema %}
