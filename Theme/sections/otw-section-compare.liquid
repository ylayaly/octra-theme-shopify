{% assign component = section.settings.component %}
{% if component != blank %}
  <div class="jum-container-1">
    <div class="jum-wrap-1">
      <div class="jum-wrap-2">
        <{{ section.settings.heading_tag }} class="jum-heading-1">
            {{- component.heading.value | escape -}}
        </{{ section.settings.heading_tag }}>
        <p class="jum-paragraph-1">
          {{ component.content.value }}
        </p>
      </div>
      <div class="jum-wrap-3">
        <div class="jum-wrap-5">
          <div class="jum-wrap-6"> </div>
          <div class="jum-wrap-7">
            <img
              src="{{ 'otw-logo-white.svg' | asset_url }}"
              loading="lazy"
              width="auto"
              height="auto"
              alt="{{ shop.name | escape }}"
              class="jun-logo-1"
            >
          </div>
          <div class="jum-wrap-4">
            <div class="jum-text-1">Others</div>
          </div>
        </div>
        <div class="jum-wrap-8">
          {% for feature in component.items.value %}
            <div class="jum-renglon-1 {% if forloop.last %}ouhoi{% endif %}">
              <div class="jum-wrap-1-1">
                <div class="jum-text-2">{{ feature }}</div>
              </div>
              <div class="jum-wrap-1-3">
                <div class="jum-iwrap-1-4">
                  <div class="jum-wrap-1-5">
                    <div class="jun-text-octra-1">Octra</div>
                  </div>
                  <div class="jum-wrap-1-6">
                    <img src="{{ 'otw-icon-check.svg' | asset_url }}" loading="lazy" alt="" width="auto" height="auto" class="jun-icon-1">
                  </div>
                </div>
              </div>
              <div class="jum-wrap-1-4">
                <div class="jum-iwrap-1-4">
                  <div class="jum-wrap-1-5">
                    <div class="jun-text-others-1">Others</div>
                  </div>
                  <div class="jum-wrap-1-6">
                    <img src="{{ 'otw-icon-uncheck.png' | asset_url }}" loading="lazy" width="auto" height="auto" alt="" class="jun-icon-2">
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="jum-wrap-1-7">
          <div class="jum-wrap-6"> </div>
          <div class="jum-wrap-4-1"> </div>
          <div class="jum-wrap-1-8"> </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Octra | Compare",
  "tag": "section",
  "class": "jum-section-1",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "metaobject",
      "id": "component",
      "label": "Component",
      "metaobject_type": "compare_component"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "options": [
        {
          "value": "h1",
          "label": "Heading 1"
        },
        {
          "value": "h2",
          "label": "Heading 2"
        },
        {
          "value": "h3",
          "label": "Heading 3"
        }
      ],
      "default": "h2",
      "label": "Heading tag"
    }
  ],
  "presets": [
    {
      "name": "Octra | Compare",
      "category": "Custom"
    }
  ]
}
{% endschema %}
