{% assign component = product.metafields.page.faqs.value %}
{% if component != blank %}
  {% render 'otw-faqs-component', component: component, heading_tag: section.settings.heading_tag %}
{% endif %}

{% schema %}
{
  "name": "Octra | FAQs",
  "tag": "section",
  "class": "plo-section-1 otw-product-faqs",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "heading_tag",
      "options": [
        {
          "value": "h1",
          "label": "Heading 1"
        },
        {
          "value": "h2",
          "label": "Heading 2"
        },
        {
          "value": "h3",
          "label": "Heading 3"
        }
      ],
      "default": "h2",
      "label": "Heading tag"
    }
  ],
  "presets": [
    {
      "name": "Octra | Compare",
      "category": "Custom"
    }
  ]
}
{% endschema %}
