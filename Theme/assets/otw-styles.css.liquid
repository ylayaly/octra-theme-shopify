body {
    letter-spacing: normal;
}

h1,
h2,
h3,
h4,
h5,
.h0,
.h1,
.h2,
.h3,
.h4,
.h5 {
    font-family: Hvdtrial Pluto, Arial, sans-serif;
    letter-spacing: normal;
}

header.sec-section-3 {
    position: sticky;
    top: 0px;
}

.sec-link-2[aria-current="page"] {
    font-family: Hvdtrial Pluto, Arial, sans-serif;
    font-weight: 700;
}

.sec-link-block-1 {
    display: inline-flex;
}

.sec-icon-1 {
    display: inline-block;

    & svg {
        height: 100%;
    }
}

.sec-link-block-1 {
    position: relative;
}

.cart-count-bubble {
    left: 60%;
    top: -10%;
}

.cart-notification {
    background-color: white;
}

.cart__ctas button[type="submit"],
.cart-drawer__empty-content a[class="button"] {
    color: #fff;
    background-color: #171717;
    border-radius: 8em;
    padding: .71em 4em;
    font-family: Hvdtrial Pluto, Arial, sans-serif;
    font-size: 1em;
    font-weight: 700;
    line-height: 1.3em;
    border: none;

    &::before,
    &::after,
    &:hover::after {
        box-shadow: none;
    }
}

.cart-item__nam {
    color: inherit;
    text-decoration: none;
}

.drawer__inner {
    box-shadow: -2px 0px 5px 0px #88888814;
}

.buh-imput-1 {
    color: white;
    outline: none !important;
    box-shadow: none !important;
}

.buh-imput-1:focus::placeholder {
    color: #fff !important;
    opacity: 0.5 !important;
}

.buh-icon-1 {
    height: 2em;
    display: block;
    width: auto;
    color: white;

    & svg {
        height: 100%;
        width: 100%;
    }

    &.full {
        aspect-ratio: 1/1;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #171717;

        & svg {
            height: 55%;
            width: 55%;
        }
    }
}

.leo-text-2.price {
    color: #4d4d4d;
    font-size: 1.11em;
    letter-spacing: normal;
}

.leo-button-1.button {
    background-color: #1a2b47;
    border: 1.05px solid #1a2b47;
    min-width: auto;
    min-height: auto;
    text-transform: uppercase;

    &::after,
    &::before,
    &:hover::after,
    &:focus-visible {
        box-shadow: none;
    }
}

.leo-button-1 .loading__spinner {
    color: white;

    & .path {
        stroke: white;
    }
}

.leo-wrap-7 {
    display: grid;
    grid-template-columns: 1fr 1fr;
}

.boton-estetico,
.divancla {
    width: 100%;
    height: 100%;
    aspect-ratio: 1 / 1;
}

.leo-wrap-4 {
    justify-content: space-between;
}

.leo-wrap-44 {
    display: grid;
    grid-column-gap: 1.42em;
    grid-row-gap: 1.42em;
    width: 100%;
}

.leo-wrap-5 {
    display: flex;
    justify-content: center;
}

.slick-slide>div {
    padding: 0px 1.175em;
}

.leo-wrap-1 {
    position: relative;
}

.leo-wrap-2 {
    overflow: hidden;
}

.leo-wrap-absolute-1 {
    inset: 50% -2%;
}

.aab-wrap-2.active .aab-text-1 {
    font-weight: bold;
}

.aab-grid-1.loading {
    opacity: 0.3;
}

.aab-wrap-2.hide {
    display: none;
}

.sat-rich-text-1.w-richtext {
    & ul, & ol {
        grid-column-gap: 1.14em;
        grid-row-gap: 1.14em;
        flex-flow: column;
        display: flex;
        padding-left: 0px;

        & li {
            background-color: #f5f7f9;
            border-radius: .57em;
            padding: 1.35em 1.71em 1.35em 5.77em;
            list-style: none;
            background-image: url("{{ 'otw-icon-check-fill.png' | asset_url }}");
            background-size: 1.9em 1.9em;
            background-position: 1.71em 1.35em;
            background-repeat: no-repeat;

        }
    }
}

.sat-rich-text-1.w-richtext{
    & p {
        line-height: 1.6em;
    }

}

[class*="-paragraph-1"] {
    & p {
        line-height: inherit;
        font-size: inherit;
        font-weight: inherit;
    }
}



@media screen and (min-width: 1440px) {
    .boton-estetico {
        width: 2.5em;
        height: 2.5em;
    }
}

@media screen and (max-width: 991px) {
    .tec-section-1 {
        padding-bottom: 0px;
    }

    .tec-wrap-2 {
        padding-bottom: 5em;
    }

    .tec-wrap-3 {
        align-self: self-end;
    }

    .buh-wrap-1-2 {
        padding-top: .92em;
        padding-bottom: .92em;
    }

    .leo-wrap-7 {
        grid-template-columns: 1fr;
    }

    .leo-section-1 {
        padding-right: 0px;
    }

    .leo-wrap-absolute-1 {
        right: 1%;
    }
}

@media screen and (max-width: 767px) {
    .tec-wrap-2 {
        padding-bottom: 0px;
    }

    .leo-section-1 {
        padding-right: 0px;
    }

    .leo-wrap-4 {
        width: 100%;
    }
}

@media screen and (max-width: 479px) {
    .buh-icon-1 {
        height: 3em;
    }

    .buh-wrap-1-2 {
        padding-top: 1.1em;
        padding-bottom: 1.1em;
    }

    .sat-rich-text-1.w-richtext {
        & ul {

            & li {
                padding-left: 4.5em;
                background-size: 1.5em 1.5em;
                background-position: 1.3em 1.6em;

            }
        }
    }


}